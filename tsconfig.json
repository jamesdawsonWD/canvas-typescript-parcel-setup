{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./lib/",
    "target": "es5",
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "~/app/*": ["app/*"],
      "~/assets/*": ["public/assets/*"],
      "~/modules/*": ["public/js/modules/*"],
      "~/classes/*": ["public/js/classes/*"],
      "~/helpers/*": ["public/js/helpers/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ],
  
}
